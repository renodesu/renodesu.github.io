---
import Layout from "../layouts/Layout.astro"
import "./global.scss"
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="message">
      <h1>renodesu.github.io</h1>
      <p>Something, someday</p>
    </div>
  </main>
</Layout>

<style lang="scss">
  @import url("https://fonts.cdnfonts.com/css/open-sans");

  html,
  body {
    min-height: 100vh;
    font-family: "Open Sans", sans-serif;
  }

  .message {
    background-color: rgba(255, 255, 255, 0.5);
    padding: 1rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    border-radius: 1rem;

    h1 {
      font-size: 3rem;
      font-weight: 600;
    }

    p {
      font-size: 2rem;
    }
  }

  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    background-color: #000;
    background-position: top center;
    background-image: url("https://images.unsplash.com/photo-1557599443-2071a2df9c19?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2107&q=80");
  }
</style>
